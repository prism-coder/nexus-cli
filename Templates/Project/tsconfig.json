{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "isolatedModules": true,
        "outDir": "dist",
        "rootDir": "Source"
    },
    "include": [
        "Source/**/*"
    ]
}